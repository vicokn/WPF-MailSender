<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Envoi de Mail" Height="560" Width="800">
    <Grid Margin="20">
        <!-- Définition des lignes et colonnes -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Adresse expéditeur -->
            <RowDefinition Height="Auto"/>
            <!-- Mot de passe -->
            <RowDefinition Height="Auto"/>
            <!-- Destinataire -->
            <RowDefinition Height="Auto"/>
            <!-- Objet -->
            <RowDefinition Height="*"/>
            <!-- Message -->
            <RowDefinition Height="Auto"/>
            <!-- Bouton -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <!-- Labels -->
            <ColumnDefinition Width="*"/>
            <!-- Champs -->
        </Grid.ColumnDefinitions>

        <!-- Adresse expéditeur -->
        <TextBlock Text="Votre adresse mail :" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtFrom" Grid.Row="0" Grid.Column="1" Margin="5" Height="28"/>

        <!-- Mot de passe -->
        <TextBlock Text="Mot de passe / clé :" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="1" Grid.Column="1" Margin="5" Height="28"/>

        <!-- Destinataire -->
        <TextBlock Text="Destinataire :" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTo" Grid.Row="2" Grid.Column="1" Margin="5" Height="28"/>

        <!-- Objet -->
        <TextBlock Text="Objet :" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtSubject" Grid.Row="3" Grid.Column="1" Margin="5" Height="28"/>

        <!-- Message -->
        <TextBlock Text="Message :" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMessage" Grid.Row="4" Grid.Column="1" Margin="5" Height="200"
                 AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <!-- Bouton Envoyer -->
        <Button x:Name="btnEnvoyer" Grid.Row="5" Grid.ColumnSpan="2" Content="Envoyer"
                Height="40" Width="150" Margin="5" HorizontalAlignment="Center" Click="btnEnvoyer_Click"/>
    </Grid>
</Window>
